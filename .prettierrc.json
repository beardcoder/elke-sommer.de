{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 120,
  "plugins": [
    "@shufo/prettier-plugin-blade",
    "@trivago/prettier-plugin-sort-imports",
    "@prettier/plugin-php",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "tabWidth": 2,
        "wrapAttributes": "force-expand-multiline",
        "parser": "blade"
      }
    }
  ]
}
