{
  "tabWidth": 2,
  "wrapAttributes": "auto",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "sortTailwindcssClasses": true,
  "plugins": [
    "@shufo/prettier-plugin-blade",
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "overrides": [
    {
      "files": ["*.blade.php"],
      "options": {
        "tabWidth": 2,
        "parser": "blade"
      }
    }
  ]
}
